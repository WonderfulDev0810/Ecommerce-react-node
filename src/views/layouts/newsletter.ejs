<style>
    /*--subscribe--*/
.sub-news{
    padding: 3em 0;
    text-align: center;
}
.sub-news h3 {
    margin-bottom: 15px;

    text-transform: uppercase;
    font-weight: bold;
    font-size: 38px;
    color: #100b0b;
}
li.ad-2-crt a:nth-child(2) {
    margin-top: 20px;
}
input.sub-email {

    padding: 7px;
    width: 40%;
    border: 2px solid #100b0b;
    outline: none;
    font-size: 18px;
}
a.subs-btn {

    border: none;
    border-right: 2px solid #000;
    border-bottom: 2px solid #000;
    border-top: 2px solid #000;
    background-color: #FFF;
    border-radius: 0;
    padding: 7px;
    font-size: 18px;
    width: 10%;
    margin: -1px -4px 0px;
    color: #000;
    outline: none;
}
a.subs-btn:hover{
    background: #7dc240;
    transition: 0.5s all;
    border: none;
    border-right: 2px solid #7dc240;
    border-bottom: 2px solid #7dc240;
    border-top: 2px solid #7dc240;
    color: #fff;
}
</style>

<div class="sub-news">
        <div class="container">
            <h3>NewsLetter</h3>
            <div class="col-lg-12">
            <form id="nlf" >
                 <div class="col-md-6 col-lg-offset-3 ">
                            <div class="ip-bar-area">
                                    <div class="ip-bar">
                                            <i  class="fa fa-envelope" aria-hidden="true"></i>
                                        <input
                                        required
                                        type="email"
                                         name="email"
                                          style="background: rgba(212, 212, 212, 0.6)">
                                    </div>
                                    <div class="ip-bar-btn">
                                        <button
                                        type="submit" class="m-btn"> Subscribe</button>
                                    </div>
                                </div>
                    </div>

            </form>

            </div>





        </div>
    </div>
    <script>
      $('#nlf').on('submit',(e) => {
      e.preventDefault()
        const email = $('#nlf input[name="email"]').val()
        $.ajax({
            url:"/newsletter/add",
            type:"post",
            data : {
                email
            },
            dataType:"text",
            success : (res)=>{
            res = JSON.parse(res)
            console.log(res.status)

            if(res.status == "SUCCESS"){
                toastr.success(res.status, res.msg)
                $('#nlf input[name="email"]').val()= ""
            }else{
                toastr.error(res.status, "Please Try Again")
            }
        }
      })
    })
    </script>