<% include layouts/header %>
<style>
.faq p{
    margin:1em auto;
}
.faq p:nth-child(even){
    color : #1a1a58;
}
.faq p:nth-child(odd){
    color : #4c4c4c;
}
.faq p strong{
    font-size: 1.5em;
}
</style>

<div class="container-fluid bg-2">

    <div class="row">
        <div class="seller-details">
            <div class="seller-content row">
                <div class="seller-body" id="contactus_text">
                    <h2>LOADING...</h2>
                </div>

            </div>

        </div>
        <div class="">
            <div class="seller-login">

                <div class="seller-login-head">
                    <h3>
                        Contact Form
                    </h3>

                </div>
                <div class="seller-login-body">
                    <form class="form-horizontal" role="form" method="POST" action="/register/seller'">


                        <div class="form-group">
                            <label for="name" class=""> Name</label>

                            <div class="">
                                <input id="name" type="text" class="form-control" name="name"  required autofocus>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="email" class="">E-Mail Address</label>

                            <div class="">
                                <input id="email" type="email" class="form-control" name="email"  required>

                            </div>
                        </div>
                        <div class="form-group">
                            <label for="email" class="">Address</label>

                            <div class="">
                                <textarea id="address" type="text" class="form-control" name="address" required>

                                </textarea>

                            </div>
                        </div>
                        <div class="form-group">
                            <label for="mobile" class="">Enter Your Mobile Number</label>

                            <div class="">
                                <input id="mobile" type="mobile" class="form-control" name="mobile"  required>

                            </div>
                        </div>

                                <button type="submit" class="m-btn blue-btn" style="    background: #2561c1 !important;
    color: #fff;
    transition: all .2s ease-out;

    border: none;
    cursor: pointer;
    text-align: center;
    line-height: 25px;
    font-size: 17px;
    border-radius: 0 3px 3px 0 !important;
    width: 100%;
    font-weight: 400;">
                                    Submit
                                </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>

$.ajax({
    url:"/show/banners/contact_text",
    type:"get",
    success :(res)=>{
        $('#contactus_text').html(res[0].banner_text)
    }
})
</script>
