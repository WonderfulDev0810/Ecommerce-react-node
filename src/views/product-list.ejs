                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>

    $(window).load((e) => {
         window.count = 0;

         productFetch();

    })


    $(window).scroll((e) => {

        if($(window).scrollTop() >= $(document).height() - $(window).height() - 10){

            productFetch();
        }

    })

    function productFetch(){
            const category = '<%= category %>';
            const totalProductAvailable = "<%= count %>";
             count = count  + 4;

            if(totalProductAvailable == count){
                $('#dummy-t').hide();
            }else{
                 $.ajax({
                 url:"/product/" + category + "/" + count + "/get/",
                 type:"post",
                 dataType:"text",
                 success : (res)=>{
                    // console.log('res :', res);
                    $("#loop").append(res);

                 }
                 })
            }

    }

</script>
